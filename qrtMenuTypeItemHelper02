scn qrtMenuTypeItemHelper02

int index
string_var title
int value
string_var my_string

Begin Function { index, title, value}
	let my_string := "StartMenu/MCM/*:1/*:"+$index+"/_enable"
	SetUIFloat $my_string 1
	let my_string := "StartMenu/MCM/*:1/*:"+$index+"/_title"
	SetUIString $my_string $title
	let my_string := "StartMenu/MCM/*:1/*:"+$index+"/_type"
	SetUIFloat $my_string 4
	let my_string := "StartMenu/MCM/*:1/*:"+$index+"/_value"
	SetUIFloat $my_string value
End